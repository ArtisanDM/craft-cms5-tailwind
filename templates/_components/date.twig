{#
   Date
   Outputs a consitantly formatted date string.

   @type {include}
   @param {string} date
   @block {bool} relative
#}

{% set dateFormat = 'jS F Y' %}

{% if relative and now|date('U') <= date|date_modify('+14 day')|date('U') %}
    {{ date|date('U') }}
{% else %}
    {{ date|date(dateFormat) }}
{% endif %}