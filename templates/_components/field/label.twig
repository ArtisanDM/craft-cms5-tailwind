{#
   Field Label
   Outputs a field label with the correct markup

   @type {include}
   @param {string} id
   @param {string} label
   @param {bool} required
#}

<label for="{{ id }}" class="form__label{{ required is defined ? ' form__label--required' }}">
   {{ label }}
   {% if required is defined %}
      <span>*</span>
   {% endif %}
</label>
