{#
   Field Label
   Outputs a field label with the correct markup

   @type {include}
   @param {string} id
   @param {string} label
   @param {bool} required
#}

<label for="{{ id }}" class="field__label">
   {{ label }}
   {% if required is defined %}
      <span class="text-primary-500">*</span>
   {% endif %}
</label>
