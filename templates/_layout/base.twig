{%- minify -%}

{% import '_partials/macros' as macro %}

<!doctype html>
<html class="no-js" lang="{{ craft.app.language|slice(0,2) }}">
   <head>

      <meta charset="utf-8">
      <meta http-equiv="x-ua-compatible" content="ie=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      {#
      {%- include "_snippets/favicons" -%} #}

      {# CSS #}
      {% if block('inlineCss') is defined %}
         <style>
            {% block inlineCss %}{% endblock %}
         </style>
      {% endif %}

      <link rel="preload" href="{{ rev('/dist/app.css') }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
      <noscript><link rel="stylesheet" href="{{ rev('/dist/app.css') }}"></noscript>

      {# Include load.js #}

      {# Google Analytics #}
      {# {% if craft.config.env == 'production' and general.globalGoogleAnalytics | length and not craft.request.isLivePreview %}
         <script>
            (function(i, s, o, g, r, a, m) {
               i['GoogleAnalyticsObject'] = r;
               i[r] = i[r] || function() {
                  (i[r].q = i[r].q || []).push(arguments)
               },
               i[r].l = 1 * new Date();
               a = s.createElement(o),
               m = s.getElementsByTagName(o)[0];
               a.async = 1;
               a.src = g;
               m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', '{{ general.globalGoogleAnalytics }}', 'auto');
            ga('send', 'pageview');
         </script>
      {% endif %} #}

   </head>

   <body>

      {% block body %}{% endblock %}

      {# Javascript #}
      {# <script src="{{ craft.cacheBuster.bust('/dist/app.js') }}"></script> #}
      {% block inlineJs %}{% endblock %}

   </body>

</html>

{%- endminify -%}
