{% extends "_layout/global" %}

{# ------- Variables ------- #}

{% set template = {
   section: 'page',
   folder: '_page'
} %}

{# ------- Template ------- #}

{% block content %}
   {%- cache globally using key 'site-footer' -%}
      {%- minify -%}
         {#
            {% for block in entry.matrix %}
               {% include '_blocks/' ~ block.type %}
            {% endfor %}
         #}
      {%- endminify -%}
   {%- endcache -%}
{% endblock %}

{# ------- Critical ------- #}

{% block criticalCss %}
   {%- spaceless -%}
      {{ source (entry.slug ~ '.css', ignore_missing = true) }}
   {%- endspaceless -%}
{% endblock %}

{# ------- Inline ------- #}

{% block inlineCss %}
{% endblock %}

{% block inlineJs %}
{% endblock %}
