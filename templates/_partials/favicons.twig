{# Favicon #}
{% set iconFavicon = icons.globalIconFavicon.first() %}

{% if iconFavicon|length %}
	<link rel="shortcut icon" href="{{ iconFavicon.url }}">
{% endif %}

{# Android #}
{% set iconAndroid = icons.globalIconAndroid.first() %}

{% if iconAndroid|length %}
	<link rel="icon" sizes="16x16 32x32 96x96 128x128 192x192" href="{{ craft.imager.transformImage(iconAndroid, { width: 200, height: 200 }).url }}">
{% endif %}

{# Apple #}
{# https://developer.apple.com/ios/human-interface-guidelines/icons-and-images/app-icon/ #}
{% set iconApple = icons.globalIconApple.first() %}

{% if iconApple|length %}
	<link rel="apple-touch-icon" href="{{ craft.imager.transformImage(iconApple, { width: 60, height: 60 }).url }}"> {# Fallback #}
	<link rel="apple-touch-icon" sizes="120x120" href="{{ craft.imager.transformImage(iconApple, { width: 120, height: 120 }).url }}"> {# iPhone 2x #}
	<link rel="apple-touch-icon" sizes="152x152" href="{{ craft.imager.transformImage(iconApple, { width: 152, height: 152 }).url }}"> {# iPad, iPad Mini #}
	<link rel="apple-touch-icon" sizes="167x167" href="{{ craft.imager.transformImage(iconApple, { width: 167, height: 167 }).url }}"> {# iPad Pro #}
	<link rel="apple-touch-icon" sizes="180x180" href="{{ craft.imager.transformImage(iconApple, { width: 180, height: 180 }).url }}"> {# iPhone 3x #}
{% endif %}
