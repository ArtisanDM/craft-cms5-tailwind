{# ------- Example - Macro Attributes  ------- #}

{% macro exampleMacroAttributes(attributes) %}

   {% set defaults = {
      list: null
   } %}

   {% set attributes = defaults|merge(attributes) %}

   {{ attributes.list }}

{% endmacro %}

{# ------- Date ------- #}

{% macro date(date, relative) %}

  {% set dateFormat = 'jS F Y' %}

  {% if relative and now|date('U') <= date|date_modify('+14 day')|date('U') %}
    {{ date|date('U') }}
  {% else %}
    {{ date|date(dateFormat) }}
  {% endif %}

{% endmacro %}

{# ------- SVG ------- #}

{% macro svg(asset) %}

   {% if asset|length %}
      {% if asset.extension == 'svg' %}
         {{ svg(asset) }}
      {% else %}
         <img src="{{ asset.url }}" alt="{{ icon.title }}">
      {% endif %}
   {% endif %}

{% endmacro %}
